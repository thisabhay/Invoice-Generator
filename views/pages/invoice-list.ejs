<!DOCTYPE html>
<html>
<head>
    <title>Invoice List</title>
</head>
<body>
    <h1>Invoice List</h1>
    <% if (invoices.length === 0) { %>
        <p>No invoices found.</p>
    <% } else { %>
        <ul>
            <% invoices.forEach(invoice => { %>
                <li>
                    <a href="/api/invoice/<%= invoice._id %>">Invoice <%= invoice.invoiceNo %> - <%= invoice.date.toDateString() %></a>
                </li>
            <% }) %>
        </ul>
    <% } %>
    <a href="/dashboard">Back to Dashboard</a>
</body>
</html>
